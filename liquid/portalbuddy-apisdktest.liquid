<hr/>
<h4>Portal Buddy API SDK Test</h4>
<p><button id="run-crmsdk" class="btn btn-primary" onclick="sdkTest();">Run Test</button></p>
<pre id="crmsdk" style="max-height:300px;overflow-y:scroll;white-space: pre-wrap;"></pre>
<hr/>

{% raw %}
<script>
	var sdkTest = function () {
	    $('#crmsdk').html('Running Execute Request...');
			PortalBuddy.App.ExecuteRequest('GET', null, 'json', true, '/api/crmsdk', null).then(
				function (data){
				  console.log(data);
					$('#crmsdk').html(JSON.stringify(data));
				}, 
				function (jqXHR, textStatus, errorThrown) {
					$('#crmsdk').html(errorThrown);
				}
			);
		};
</script>
{% endraw %}

