{% if user %}	{% assign userId = "" %}	{% assign authority = settings["PortalBuddy/Auth/Authority"] %}	{% fetchxml externalIdentityFetch %}		<fetch version="1.0" output-format="xml-platform" mapping="logical" distinct="false">			<entity name="adx_externalidentity">				<attribute name="adx_username" />				<filter type="and">					<condition attribute="adx_contactid" operator="eq" value="{{ user.Id }}" />					<condition attribute="adx_identityprovidername" operator="eq" value="{{ authority }} " />					<condition attribute="statecode" operator="eq" value="0" />				</filter>			</entity>		</fetch>	{% endfetchxml %}    {% if externalIdentityFetch.results.entities.size > 0 %}      {% assign userId = externalIdentityFetch.results.entities[0].adx_username %}    {% endif %}{% endif %}<input type="hidden" id="portalbuddy-userId" value="{{ userId }}"/><input type="hidden" id="portalbuddy-websiteId" value="{{ website.id }}"/><input type="hidden" id="portalbuddy-uri" value="{{ settings["PortalBuddy/Uri"] }}"/><script>{% raw %}	$.ajax({		url: document.getElementById("portalbuddy-uri").value + "/Loader",		elem: 'body'	}).done(function (data, textStatus, jqXHR) {		var content = $.parseHTML(data, document, true);		$('body').append(content);	}).fail(function (jqXHR, textStatus, errorThrown) {		console.log('Portal Buddy Loader Request Failed");	});{% endraw %}</script>